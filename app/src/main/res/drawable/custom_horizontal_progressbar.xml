<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dp" />
            <gradient android:centerColor="@color/soft_pink"
                android:endColor="@color/soft_pink"
                android:startColor="@color/soft_pink"></gradient>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="15dp" />
                <gradient android:centerColor="@color/teal_700"
                    android:endColor="@color/teal_700"
                    android:startColor="@color/teal_700"></gradient>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15dp" />
                <gradient android:startColor="@color/pink"
                    android:endColor="@color/pink"
                    android:centerColor="@color/pink"></gradient>
            </shape>
        </clip>
    </item>

</layer-list>