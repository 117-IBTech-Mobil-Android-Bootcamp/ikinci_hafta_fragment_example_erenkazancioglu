<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_decky_word_test_bg"
    tools:context=".WordTestActivity">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/view_margin_xlarge"
        android:id="@+id/guide_start"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/view_margin_default"
        android:id="@+id/guide_min_start"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:id="@+id/guide_end"
        app:layout_constraintGuide_end="@dimen/view_margin_xlarge"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/view_margin_xxxlarge"
        android:id="@+id/guide_in_start"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:id="@+id/guide_in_end"
        app:layout_constraintGuide_end="@dimen/view_margin_xxxlarge"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_in_top"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="175dp"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_max_top"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="265dp"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:id="@+id/guide_bottom"
        app:layout_constraintGuide_end="90dp"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:id="@+id/guide_in_medium_top"
        app:layout_constraintGuide_begin="110dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/total_question"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-black"
        android:gravity="right|center_vertical|center_horizontal"
        android:text="10"
        android:textSize="35sp"
        android:textColor="@color/levelViewText"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="@id/guide_top"></androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/levet_separator"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-black"
        android:gravity="right|center_vertical|center_horizontal"
        android:text="/"
        android:textSize="35sp"
        android:textColor="@color/levelViewText"
        app:layout_constraintEnd_toStartOf="@id/total_question"
        app:layout_constraintTop_toTopOf="@id/guide_top"></androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/current_levet_question"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-black"
        android:gravity="right|center_vertical|center_horizontal"
        android:text="3"
        android:textColor="@color/levelViewText"
        android:textSize="35sp"
        app:layout_constraintEnd_toStartOf="@id/levet_separator"
        app:layout_constraintTop_toTopOf="@id/guide_top"></androidx.appcompat.widget.AppCompatTextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_circular_exit"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="25dp"
        card_view:cardCornerRadius="19dp"
        card_view:cardPreventCornerOverlap = "false"
        card_view:cardElevation="6dp"
        android:fontFamily="@font/pt_sans_caption_bold"
        app:layout_constraintBottom_toTopOf="@id/total_question"
        app:layout_constraintEnd_toEndOf="@id/guide_end">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/ic_path">


    </androidx.appcompat.widget.AppCompatImageView>

    </androidx.cardview.widget.CardView>



    <douglasspgyn.com.github.circularcountdown.CircularCountdown
        android:id="@+id/circularCountdown"
        app:layout_constraintBottom_toTopOf="@id/horizontalProgressbar"
        app:layout_constraintStart_toStartOf="@id/guide_min_start"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:countdownBackgroundColor="@color/pink"
        app:countdownForegroundColor="@color/gray"
        app:countdownTextColor="@color/black"
        android:layout_marginBottom="10dp"
        app:countdownTextSize="24sp"
        tools:ignore="MissingClass" />

    <ProgressBar
        android:id="@+id/horizontalProgressbar"
        android:layout_width="360dp"
        android:layout_height="5dp"
        android:progress="0"
        android:max="100"
        style="@style/Progress_bar_horizontal"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintBottom_toTopOf="@id/card_view_question"
       app:layout_constraintTop_toTopOf="@id/guide_in_medium_top"
        android:layout_marginBottom="20dp">
    </ProgressBar>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_question"
        app:cardElevation="@dimen/card_elevetion_default"
        app:cardCornerRadius="@dimen/default_radius_of_view"
        android:layout_width="160dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/guide_in_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guide_max_top"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/question_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_xlarge" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:cardElevation="4dp"
        app:cardCornerRadius="@dimen/default_radius_of_view"
        android:layout_width="@dimen/card_view_width"
        android:layout_height="@dimen/card_view_height"
        app:layout_constraintEnd_toStartOf="@id/card_view_2"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintBottom_toTopOf="@id/card_view_3"
        android:layout_marginBottom="@dimen/view_margin_large">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/CardViewChooseTextStyle"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_text"
                android:textColor="@color/correct_choose_card_view_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BoldWordTestCardView"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_2"
        android:layout_width="@dimen/card_view_width"
        app:cardCornerRadius="@dimen/default_radius_of_view"
        android:layout_height="@dimen/card_view_height"
        app:cardElevation="@dimen/card_elevetion_default"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintBottom_toTopOf="@id/card_view_4"
        app:layout_constraintStart_toEndOf="@id/card_view"
        android:layout_marginBottom="@dimen/view_margin_large">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BoldWordTestCardView"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_3"
        app:cardElevation="@dimen/card_elevetion_default"
        app:cardCornerRadius="@dimen/default_radius_of_view"
        android:layout_width="@dimen/card_view_width"
        android:layout_height="@dimen/card_view_height"
        app:layout_constraintHorizontal_chainStyle="spread"
        card_view:layout_constraintStart_toStartOf="@id/guide_start"
        card_view:layout_constraintBottom_toBottomOf="@id/guide_bottom"
        app:layout_constraintEnd_toStartOf="@id/card_view_4">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BoldWordTestCardView"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_4"
        app:cardElevation="@dimen/card_elevetion_default"
        app:cardCornerRadius="@dimen/default_radius_of_view"
        android:layout_width="@dimen/card_view_width"
        android:layout_height="@dimen/card_view_height"
        card_view:layout_constraintStart_toEndOf="@id/card_view_3"
        app:layout_constraintBottom_toBottomOf="@id/guide_bottom"
        card_view:layout_constraintEnd_toEndOf="@id/guide_end">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_text_4"
                style="@style/BoldWordTestCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>