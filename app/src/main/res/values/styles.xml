<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ButtonPurpleTextStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CardViewChooseTextStyle" parent="">
        <item name="android:background">@drawable/rounded_shape_cardview_choose</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="BoldTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_text_color_black</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="fontFamily">@font/avenir_heavy</item>
    </style>

    <style name="BoldTextViewTitle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_text_color_black</item>
        <item name="fontFamily">@font/avenir_heavy</item>
        <item name="android:textSize">@dimen/textsize_xlarge</item>
    </style>

    <style name="BoldWordTestCardView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_text_color_black</item>
        <item name="fontFamily">@font/avenir_heavy</item>
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="Progress_bar_horizontal" parent ="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/custom_horizontal_progressbar</item>
    </style>



</resources>